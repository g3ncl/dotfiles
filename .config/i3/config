# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec  --no-startup-id sh ~/.config/polybar/pulseaudio-tail.sh --up
bindsym XF86AudioLowerVolume exec  --no-startup-id sh ~/.config/polybar/pulseaudio-tail.sh --down
bindsym XF86AudioMute exec --no-startup-id sh ~/.config/polybar/pulseaudio-tail.sh --mute

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec light -A 5 # increase screen brightness
bindsym XF86MonBrightnessDown exec light -U 5 # decrease screen brightness


 
# Multi-screen screenshots with scrot
bindsym --release Print exec scrot 'screenshot_%Y%m%d_%H%M%S.png' -e 'mkdir -p ~/Immagini/Screenshots && mv $f ~/Immagini/Screenshots && xclip -selection clipboard -t image/png -i ~/Immagini/Screenshots/`ls -1 -t ~/Immagini/Screenshots | head -1`' # All screens

# area selection screenshots
bindsym --release Shift+Print exec scrot -s 'screenshot_%Y%m%d_%H%M%S.png' -e 'mkdir -p ~/Immagini/Screenshots && mv $f ~/Immagini/Screenshots && xclip -selection clipboard -t image/png -i ~/Immagini/Screenshots/`ls -1 -t ~/Immagini/Screenshots | head -1`' # Area selection

